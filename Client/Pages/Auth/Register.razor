@page "/auth/register" 
@layout AuthLayout

@inject NavigationManager navigationManager

<div class="row">
    <div class="col-12">
        <EditForm Model="User" OnValidSubmit="RegisterUser">
            <div class="container">
                <div class="row px-2 mx-2 border">
                    <DataAnnotationsValidator />
                </div>
                <div class="col-12" style="border-bottom: 1px solid #325d88">
                    <h3>Создать новый аккаунт</h3>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label class="control-label">Имя</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.FirstName" placeholder="Введите имя"></InputText>
                            <ValidationMessage For="(() => User.FirstName)"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Фамилия</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.LastName" placeholder="Введите фамилию"></InputText>
                            <ValidationMessage For="(() => User.LastName)"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Отчество</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.Patronymic" placeholder="Введите отчество"></InputText>
                            <ValidationMessage For="(() => User.Patronymic)"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Группа</label>
                        </div>
                        <div class="col-12">
                            <InputSelect class="form-control" @bind-Value="selectedGroupId">
                                @if (Groups.Count() > 0)
                                {
                                    @foreach (var group in Groups)
                                    {
                                        <option value="@group.Id">@group.Name</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Имя пользователя</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.UserName" placeholder="Введите имя пользователя"></InputText>
                            <ValidationMessage For="(() => User.UserName)"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Электронная почта</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.Email" placeholder="Введите электронную почту"></InputText>
                            <ValidationMessage For="(() => User.Email)"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Пароль</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.Password" placeholder="Введите пароль"></InputText>
                            <ValidationMessage For="(() => User.Password)"></ValidationMessage>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label>Повторите пароль</label>
                        </div>
                        <div class="col-12">
                            <InputText class="form-control" @bind-Value="User.ConfirmPassword" placeholder="Введите пароль"></InputText>
                            <ValidationMessage For="(() => User.ConfirmPassword)"></ValidationMessage>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Отправить</button>
                    <a class="btn btn-danger" href="/auth/login">Назад</a>
                </div>
            </div>
          </EditForm>
    </div>
</div>

@code {
    private UserForCreationDto User { get; set; } = new UserForCreationDto();
    private IEnumerable<GroupDto> Groups { get; set; } = new List<GroupDto>();

    private int selectedGroupId;
    private HttpClient client;

    protected override async Task OnParametersSetAsync()
    {
        client = new HttpClient();
        Groups = await client.GetFromJsonAsync<IEnumerable<GroupDto>>("http://localhost:5000/api/groups");
        selectedGroupId = Groups.FirstOrDefault().Id;
    }

    public async Task RegisterUser()
    {
        var response = await client.PostAsJsonAsync($"http://localhost:5000/{selectedGroupId}/auth/register", User);

        if (response.IsSuccessStatusCode)
            navigationManager.NavigateTo("/");
        else
            navigationManager.NavigateTo("/auth/register");
    }
}
