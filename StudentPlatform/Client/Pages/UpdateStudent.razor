@page "/students/{groupId:int}/editStudent/{userId}"

@inject NavigationManager navigationManager

<div class="row">
    <div class="col-6">
        <EditForm Model="User" OnValidSubmit="Update">
            <div class="col-6">
                <h3>Редактировать студента</h3>
            </div>
            <div class="row px-2 mx-2 border">
                <DataAnnotationsValidator />
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label class="control-label">Имя</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.FirstName" placeholder="Введите имя"></InputText>
                        <ValidationMessage For="(() => User.FirstName)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label>Фамилия</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.LastName" placeholder="Введите фамилию"></InputText>
                        <ValidationMessage For="(() => User.LastName)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label>Отчество</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.Patronymic" placeholder="Введите отчество"></InputText>
                        <ValidationMessage For="(() => User.Patronymic)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label>Имя пользователя</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.UserName" placeholder="Введите имя пользователя"></InputText>
                        <ValidationMessage For="(() => User.UserName)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label>Электронная почта</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.Email" placeholder="Введите электронную почту"></InputText>
                        <ValidationMessage For="(() => User.Email)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label>Пароль</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.Password" placeholder="Введите пароль"></InputText>
                        <ValidationMessage For="(() => User.Password)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label>Повторите пароль</label>
                    </div>
                    <div class="col-12">
                        <InputText class="form-control" @bind-Value="User.ConfirmPassword" placeholder="Введите пароль"></InputText>
                        <ValidationMessage For="(() => User.ConfirmPassword)"></ValidationMessage>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <button class="btn btn-primary" type="submit">Принять</button>
                <a class="btn btn-danger" href="students/@GroupId">Назад</a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public int GroupId { get; set; }

    [Parameter]
    public string UserId { get; set; }

    private UserForUpdateDto User = new UserForUpdateDto();

    private HttpClient client = new HttpClient();

    protected override async Task OnParametersSetAsync()
    {
        client = new HttpClient();
        var user = await client.GetFromJsonAsync<UserDto>($"http://localhost:5000/api/groups/{GroupId}/users/{UserId}");

        User.FirstName = user.FullName.Split(" ")[1];
        User.LastName = user.FullName.Split(" ")[0];
        User.Patronymic = user.FullName.Split(" ")[2];
        User.UserName = user.UserName;
        User.Email = user.Email;
        User.Password = user.Password;
        User.ConfirmPassword = user.Password;
    }

    public async Task Update()
    {
        var result = await client.PutAsJsonAsync<UserForUpdateDto>($"http://localhost:5000/api/groups/{GroupId}/users/{UserId}", User);

        if (result.IsSuccessStatusCode)
            navigationManager.NavigateTo($"students/{GroupId}", true);
    }
}
